<%= render 'shared/errors', obj:@students %>


<div class="container">
  <div class="row center sign-up-form">
      <div class="col s12 m12 l12">
          <div class="card-panel">
            <h3 clas="header"><%=@students.new_record? ? "SIGN_UP" : "EDIT YOUR PROFILE"%> </h3>
            <div class="row">
            <%=form_for(@students, html: {class: "col s12"}) do |f|%>
                <div class ="row">
                    <div class ="input-field col s12">
                    <%= f.text_field :name, placeholder:"Enter your full name",autofocus: true%>
                    <%= f.label :name ,class: "active"%>
                    </div>
                </div> 
                  <div class ="row">                                
                      <div class ="input-field col s12">
                    <%= f.email_field :email, placeholder:"enter your email address"%>
                    <%=f.label :email,class: "active"%>
                    </div>                
                
                <div class ="row">
                    <div class ="input-field col s12">
                    <%= f.password_field :password, placeholder:"choose your password"%>
                    <%=f.label :password,class: "active"%>
                    </div>
                </div> 
                   <div class ="row">                                
                      <div class ="input-field col s12">
                    <%= f.password_field :password_confirmation, placeholder:"confirm your password"%>
                    <%=f.label :password_confirmation,class: "active"%>
                    </div>
                </div>              
                  <div class ="row">
                    <div class ="input-field col s12">
                        <%=f.button(@students.new_record? ? "sign_up" : "submit updates" ,class:"btn orange waves-effect waves-light right")%>
                     </div>
                  </div>      
            <%end%>
            </div>
          </div>
        </div>
    </div>
</div>